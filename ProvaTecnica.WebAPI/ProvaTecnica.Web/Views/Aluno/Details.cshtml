@model ProvaTecnica.Web.Models.Aluno

<br />
<h2 class="text-info">Detalhes Aluno</h2>
<br />

<div class="border container" style="padding:30px;">
    <form method="post">
        <div class="form-group row">
            <div class="col-4">
                <label>Nome</label>
            </div>
            <div class="col-6">
                @Html.DisplayFor(model => model.NomeAluno)
            </div>
        </div>
        <div class="form-group row">
            <div class="col-4">
                <label>Nota</label>
            </div>
            <div class="col-6">
                @Html.DisplayFor(model => model.NotaAluno)
            </div>
        </div>  
        <div class="form-group row">
            <div class="col-4">
                <label>Turma</label>
            </div>
            <div class="col-6">
                @Html.DisplayFor(model => model.Turma.NomeTurma)
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <a asp-action="Index" class="btn btn-success form-control">Retornar</a>
            </div>
        </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

